@model IEnumerable<FA.JustBlog.Models.Models.Category>
    

    <li class="btn-group nav-item">
        <a style="font-size: 12px; padding:24px 16px;" type="button" class="btn dropdown-toggle nav-link px-lg-3 py-3 py-lg-4" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            CATEGORIES
        </a>
        <div class="dropdown-menu" style="margin-top:50px">
            @foreach(var item in Model)
            {
                <a asp-controller="Post" asp-action="GetListPostsByCategoryName" asp-route-name="@item.Name" class="dropdown-item">@item.Name</a>
            }
        </div>
    </li>
